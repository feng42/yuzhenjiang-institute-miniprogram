/* pages/gallery/gallery.wxss */

.news-gallery-list{
  display: -webkit-flex;
  display: flex;
  align-items: center;
  width: 100%;
  justify-content: space-between;
}
.gallery-img{
  width: 150rpx;
  height: 150rpx;
  flex: 0 0 auto;
  padding-top: 10px;
  padding-bottom: 5px;
}
.gallery-box{
  width: 450rpx;
  height: 90rpx;
  overflow: hidden;
  padding-top: 10px;
  padding-bottom: 5px;
}
.gallery-name{
  display: block;
  height: 50rpx;
  line-height: 50rpx;
  overflow: hidden;
  font-size: 35rpx;
}
.gallery-detail{
  display: block;
  height: 40rpx;
  line-height: 40rpx;
  overflow: hidden;
  font-size: 30rpx;
  color: #8f8f94;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.gallery-left{padding-left: 10px;}
.gallery-right{padding-right: 10px;}